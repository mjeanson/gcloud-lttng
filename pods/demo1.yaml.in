---
apiVersion: v1
kind: ConfigMap
metadata:
  name: envmap
data:
  # Use a shared volume as the lttng home to share configuration across all
  # containers in the pod.
  LTTNG_HOME: "/lttng"
  # Enable lttng-ust console debug logs. This is useful for development but is
  # probably too verbose for production use.
  LTTNG_UST_DEBUG: "1"

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: saved-chunks
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi

---
apiVersion: v1
kind: Pod
metadata:
  name: demo1
spec:
  # Share the pid namespace across the pod, required for the sessiond sidecar
  shareProcessNamespace: true

  # These containers are run during pod initialization
  initContainers:
  - name: create-session-config
    image: ${REGION}-docker.pkg.dev/${PROJECT_ID}/${DOCKER_REPO}/lttng-sessiond:v1
    imagePullPolicy: Always
    command: ["/bin/sh", "-c", "mkdir -p /lttng/.lttng/sessions/auto && cp /configs/userspace-all.lttng /lttng/.lttng/sessions/auto/"]
    volumeMounts:
      - mountPath: /lttng
        name: lttng-home
    envFrom:
      - configMapRef:
          name: envmap

  # Regular pod containers, they are started in the order they are defined
  # here, this is not specified by kubernetes and is probably just an
  # implementation detail.
  containers:
  # Sessiond sidecar
  - name: lttng-sessiond
    image: ${REGION}-docker.pkg.dev/${PROJECT_ID}/${DOCKER_REPO}/lttng-sessiond:v1
    imagePullPolicy: Always
    volumeMounts:
      - mountPath: /lttng
        name: lttng-home
      - mountPath: /lttng-traces
        name: lttng-traces
      - mountPath: /run/lttng
        name: lttng-rundir
      - mountPath: /dev/shm
        name: devshm
    envFrom:
      - configMapRef:
          name: envmap
    command: ["/usr/bin/lttng-sessiond"]
    args: ["-vvv", "--no-kernel"]
    lifecycle:
      # This script will return when the sessiond has an active session thus
      # allowing all potential events from other containers started afterwards
      # to be captured.
      postStart:
        exec:
          command:
          - /usr/local/bin/wait-session-active.sh
    # Use the sessiond health status system to detect a malfunction and restart
    # the sidecar. This can be useful to detect a consumerd killed by the
    # kernel OOM killer. The time values are only examples and will need to be
    # adjusted to your environment.
    livenessProbe:
      exec:
        command:
        - /usr/local/bin/lttng-health-check
      initialDelaySeconds: 5
      periodSeconds: 1
      failureThreshold: 1
      timeoutSeconds: 5

  - name: lttng-notif-client
    image: ${REGION}-docker.pkg.dev/${PROJECT_ID}/${DOCKER_REPO}/lttng-notif-client:v1
    imagePullPolicy: Always
    volumeMounts:
      - mountPath: /lttng-traces
        name: lttng-traces
      - mountPath: /run/lttng
        name: lttng-rundir
      - mountPath: /saved-chunks
        name: saved-chunks
    envFrom:
      - configMapRef:
          name: envmap
    command: ["/usr/local/bin/lttng-notif-client"]
    args: ["userspace-all", "/saved-chunks"]

  # LTTng demo app 1
  - name: lttng-app1
    image: ${REGION}-docker.pkg.dev/${PROJECT_ID}/${DOCKER_REPO}/lttng-app1:v1
    imagePullPolicy: Always
    volumeMounts:
      - mountPath: /run/lttng
        name: lttng-rundir
      - mountPath: /dev/shm
        name: devshm
    envFrom:
      - configMapRef:
          name: envmap

  # LTTng demo app 2
  - name: lttng-app2
    image: ${REGION}-docker.pkg.dev/${PROJECT_ID}/${DOCKER_REPO}/lttng-app2:v1
    imagePullPolicy: Always
    volumeMounts:
      - mountPath: /run/lttng
        name: lttng-rundir
      - mountPath: /dev/shm
        name: devshm
    envFrom:
      - configMapRef:
          name: envmap

  volumes:
  # Shared LTTng home dir to preseed configuration
  - name: lttng-home
    emptyDir: {}
  # Shared LTTng run dir for socket communication
  - name: lttng-rundir
    emptyDir: {}
  # Shared LTTng traces dir for sessiond and notifications client
  - name: lttng-traces
    emptyDir: {}
  # Persistent volume to store rotated chunks for future processing
  - name: saved-chunks
    persistentVolumeClaim:
      claimName: saved-chunks
  # Shared SHM drive for tracing buffers. Size will need to be adjusted
  # according to your tracing buffers configuration.
  - name: devshm
    emptyDir:
      sizeLimit: "350Mi"
      medium: Memory
